{
    "env": {
        "browser": true
    },
    "extends": [
        "p5js",
        "p5js/dom",
        "p5js/sound"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
